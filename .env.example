# .env.example - Configuration for Fear & Greed Trading Framework
# Copy this file to .env and fill in your actual values.

# -- Core Settings --
LOG_LEVEL=INFO

# -- Database (PostgreSQL) --
# Example: postgresql://user:password@localhost:5432/trading_framework
DATABASE_URL=postgresql://user:password@localhost:5432/trading_framework

# -- Redis --
# Example: redis://localhost:6379
REDIS_URL=redis://localhost:6379

# -- API Keys --
# It is strongly recommended to use a secret management tool for production.
# For local development, you can place them here.

# Crypto Fear & Greed Index (e.g., from alternative.me)
FEAR_GREED_API_KEY=your_api_key_here

# Market Data (e.g., CoinMarketCap or CoinGecko)
MARKET_DATA_API_KEY=your_api_key_here

# Exchange API Keys (replace with your chosen exchange)
EXCHANGE_API_KEY=your_api_key_here
EXCHANGE_API_SECRET=your_api_secret_here

# Social Media APIs (optional, for sentiment analysis)
TWITTER_API_KEY=your_api_key_here
REDDIT_CLIENT_ID=your_client_id_here
REDDIT_CLIENT_SECRET=your_client_secret_here
